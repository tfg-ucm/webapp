    <div class="form-container">
        <div class="image-holder"></div>
        <form method="post">
            <h2 class="text-center"><strong>Crear una cuenta</strong></h2>
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Nombre">
